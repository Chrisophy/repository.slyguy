<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.slyguy" name="SlyGuy Repository" provider-name="SlyGuy" version="0.0.2">
  <extension point="xbmc.addon.repository" name="SlyGuy Repository">
    <dir>
		<info compressed="false">https://raw.githubusercontent.com/Chrisophy/repository.slyguy/leia/main/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/Chrisophy/repository.slyguy/leia/main/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/Chrisophy/repository.slyguy/leia/raw/main/</datadir>
    </dir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <description lang="en">Addons by SlyGuy</description>
    <license></license>
    <language></language>
    <website></website>
    <news></news>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets> 
  </extension>
  
<addon id="script.module.slyguy" name="SlyGuy Common" provider-name="SlyGuy" version="5.35.8">
